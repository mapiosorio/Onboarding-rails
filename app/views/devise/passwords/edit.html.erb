<div class="row">

  <%= render 'devise/shared/computer' %>

  <div class="position-relative col-lg-6 mt-lg-5 pt-lg-5">
    <div class="ms-2 mt-3 mt-lg-5 pt-lg-5 d-flex flex-column mx-lg-5 px-lg-5">
      <div class="mx-4 px-1 mt-4">
        <h2 class="mb-5"><%= t('change_password.title') %></h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field mt-3">
            <%= f.label :password, t('change_password.new_password'), class: 'fw-lg-normal fw-medium' %><br />
            <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'border-0 border-bottom border-dark w-100 bg-transparent' %>
          </div>

          <div class="field mt-5">
            <%= f.label :password_confirmation, t('change_password.confirm_new_password'), class: 'fw-lg-normal fw-medium' %><br />
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'border-0 border-bottom border-dark w-100 bg-transparent' %>
          </div>

          <div class="actions mb-5 d-flex justify-content-center w-100 mt-5">
            <%= f.submit t('change_password.submit'), class: 'text-light bg-primary-gradient border-0 rounded w-100 shadow py-lg-1' %>
          </div>
        <% end %>
      </div>

      <%= render 'devise/shared/links' %>

      <%= render 'devise/shared/footer' %>

      <%= render 'devise/shared/help' %>
    </div>
  </div>
</div>

