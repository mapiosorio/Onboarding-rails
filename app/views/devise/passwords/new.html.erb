<div class='row'>

  <%= render 'devise/shared/computer' %>

  <div class='position-relative col-lg-6 mt-lg-5'>

    <div class='mt-lg-5 pt-lg-5 d-flex flex-column justify-content-between mx-lg-5 px-lg-5 ms-2'>
      <div class="mx-4 px-1 mt-2 mt-lg-5">
        <h2 class='mt-5 mt-lg-3 fw-lg-medium fw-semibold fs-lg-2 line-height-130 mb-3 mb-5'><%= t('links.forgot_password') %></h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class='field mt-3'>
            <%= f.label :email, t('form_fields.email'), class: 'fw-lg-normal fw-medium' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'border-0 border-bottom border-dark w-100 bg-transparent' %>
          </div>

          <div class='actions mb-5 d-flex justify-content-center w-100 mt-5'>
            <%= f.submit t('form_fields.change_password'), class: 'text-light bg-primary-gradient border-0 rounded w-100 shadow py-lg-1' %>
          </div>

        <% end %>
      </div>

      <%= render 'devise/shared/links' %>

      <%= render 'devise/shared/footer' %>

      <%= render 'devise/shared/help' %>
    </div>
  </div>
</div>
